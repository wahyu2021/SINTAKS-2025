# Root editor config file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Settings for markdown files
[*.md]
trim_trailing_whitespace = false

# Settings for JavaScript files
[*.js]
indent_size = 4